<%- include('layout/navbar') %>
<h1><%= artist.name %></h1>
<img src="/Artists/artist<%= artist.id %>.jpg" class="pictureSize">
<h2>Genre: <%= artist.genre %></h2>
<p>Albums: <%= albums.length%></p>

<% albums.forEach((album, i) => { %>
  <div class = "item row">
    <img src="/Albums/<%= albums[i].id %>.jpg" class="pictureSize"/>
    <div class = "column">
      <a href = "/albums/<%=album.id%>">
        <h1><%= album.title%> </h1>
      </a>
      <h3><%= album.year %></h3>
      <h3>tracks: <%= songs[i].length %></h3>
    </div>
  </div>
<% }) %>
